<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainFrameIDInfoSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpIDInformation">

    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="116dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/StatusBar"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/HeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="68dp"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            >

            <LinearLayout
                android:id="@+id/LeftContainer"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButtonSignUpIDInfo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/back_button"
                    android:clickable="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Spacing1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Spacing1"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ProgressBar01"
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/progress_bar_bg">

            <FrameLayout
                android:id="@+id/ProgressBarFilled"
                android:layout_width="27.17dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_bar_filled">
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProgressBar02"
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:background="@drawable/progress_bar_bg">
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Spacing2"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBar">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/Body"
        android:layout_width="match_parent"
        android:layout_height="686dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spacing2">

        <LinearLayout
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="108dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleText1"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:fontFamily="@font/dm_sans_semibold"
                android:textFontWeight="600"
                android:textSize="12dp"
                android:lineHeight="18dp"
                android:letterSpacing="0.08"
                android:textAllCaps="true"
                android:textColor="@color/odero_gray"
                android:text="ÜYELİK BİLGİLERİ"/>

            <FrameLayout
                android:id="@+id/Spacing4"
                android:layout_width="match_parent"
                android:layout_height="4dp">

            </FrameLayout>

            <TextView
                android:id="@+id/TitleText2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Kimlik bilgilerini gir"
                android:textAllCaps="false"
                android:fontFamily="@font/dm_sans_medium"
                android:textFontWeight="500"
                android:textSize="24dp"
                android:lineHeight="30dp"
                android:letterSpacing="0"
                android:textColor="@color/odero_black_gray"/>

            <FrameLayout
                android:id="@+id/Spacing5"
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </FrameLayout>

            <TextView
                android:id="@+id/TitleText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seni tanıyabilmemiz ve doğrulayabilmemiz için\nkimlik bilgilerine ihtiyacımız var."
                android:fontFamily="@font/dm_sans"
                android:textFontWeight="400"
                android:textSize="16dp"
                android:lineHeight="24dp"
                android:letterSpacing="0"
                android:textColor="@color/odero_gray"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Spacing3"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/Fields"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Selections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="212dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Selection01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center|left"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/container_bg"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/NameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginStart="4dp"
                        android:background="@null"
                        android:hint="Ad"

                        android:fontFamily="@font/dm_sans"
                        android:textFontWeight="400"
                        android:textSize="14dp"
                        android:lineHeight="20dp"
                        android:letterSpacing="0"
                        android:textColor="@color/odero_gray"
                        />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/Spacing7"
                    android:layout_width="match_parent"
                    android:layout_height="16dp">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/Selection02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center|left"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/container_bg"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/SurnameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginStart="4dp"
                        android:background="@null"
                        android:hint="Soyad"
                        android:fontFamily="@font/dm_sans"
                        android:textFontWeight="400"
                        android:textSize="14dp"
                        android:lineHeight="20dp"
                        android:letterSpacing="0"
                        android:textColor="@color/odero_gray"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/Spacing8"
                    android:layout_width="match_parent"
                    android:layout_height="16dp">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/Selection03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center|left"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/container_bg"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/TCInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="11"
                        android:layout_marginStart="4dp"
                        android:background="@null"
                        android:hint="TC Kimlik Numarası"
                        android:fontFamily="@font/dm_sans"
                        android:textFontWeight="400"
                        android:textSize="14dp"
                        android:lineHeight="20dp"
                        android:letterSpacing="0"
                        android:textColor="@color/odero_gray"/>
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/Spacing6"
                android:layout_width="match_parent"
                android:layout_height="24dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/Checkboxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="196dp"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="114dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/OuterShell"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/green_bg_button"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:id="@+id/Container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="104dp"
                    android:minHeight="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ContinueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans_semibold"
                        android:gravity="center"
                        android:letterSpacing="0"
                        android:lineHeight="24dp"
                        android:minWidth="74dp"
                        android:minHeight="24dp"
                        android:text="Devam et"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="16px" />

                    <ImageView
                        android:id="@+id/RightIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/right_icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>