<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SignUpPhoneVer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPhoneVerification" >

    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="116dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/StatusBar"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/HeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="68dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/LeftContainer"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButtonSignUpPhoneVer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:src="@drawable/back_button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/Spacing1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Spacing1"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ProgressBar01"
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/progress_bar_bg">

            <FrameLayout
                android:id="@+id/ProgressBarFilled"
                android:layout_width="84.51dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_bar_filled">

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProgressBar02"
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:background="@drawable/progress_bar_bg">
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/Spacing2"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBar"/>
    <LinearLayout
        android:id="@+id/Body"
        android:layout_width="match_parent"
        android:layout_height="686dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spacing2">

        <LinearLayout
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="108dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleText1"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:fontFamily="@font/dm_sans_semibold"
                android:textFontWeight="600"
                android:textSize="12dp"
                android:lineHeight="18dp"
                android:letterSpacing="0.08"
                android:textAllCaps="true"
                android:textColor="@color/odero_gray"
                android:text="ÜYELİK BİLGİLERİ"/>

            <FrameLayout
                android:id="@+id/Spacing4"
                android:layout_width="match_parent"
                android:layout_height="4dp">

            </FrameLayout>

            <TextView
                android:id="@+id/TitleText2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/dm_sans_medium"
                android:letterSpacing="0"
                android:lineHeight="30dp"
                android:text="Cep telefonunu doğrula"
                android:textAllCaps="false"
                android:textColor="@color/odero_black_gray"
                android:textFontWeight="500"
                android:textSize="24dp" />

            <FrameLayout
                android:id="@+id/Spacing5"
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </FrameLayout>

            <TextView
                android:id="@+id/TitleText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:letterSpacing="0"
                android:lineHeight="24dp"
                android:text="+90 537 917 7562 numaralı cep telefonuna gelen 6 haneli kodu gir."
                android:textColor="@color/odero_gray"
                android:textFontWeight="400"
                android:textSize="16dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Spacing3"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/Fields"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Selections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/OTPInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="350dp"
                    android:minHeight="64dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/OTP01"
                        android:layout_width="48.33dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_input_background"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/OTP02"
                        android:layout_width="48.33dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_input_background"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/OTP03"
                        android:layout_width="48.33dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_input_background"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/OTP04"
                        android:layout_width="48.33dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_input_background"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/OTP05"
                        android:layout_width="48.33dp"
                        android:layout_height="64dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/otp_input_background"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/OTP06"
                        android:layout_width="48.33dp"
                        android:layout_height="64dp"
                        android:background="@drawable/otp_input_background"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/spacing5"
                android:layout_width="match_parent"
                android:layout_height="24dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/Container2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infoText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans"
                    android:letterSpacing="0"
                    android:lineHeight="20dp"
                    android:text="Sorun mu yaşıyorsun?"
                    android:textColor="@color/odero_gray"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

                <FrameLayout
                    android:id="@+id/Spacing7"
                    android:layout_width="match_parent"
                    android:layout_height="4dp">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/Frame218"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="258dp"
                    android:minHeight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/remainingTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans"
                        android:letterSpacing="0"
                        android:lineHeight="20dp"
                        android:text="180 saniye sonra "
                        android:textColor="@color/odero_gray"
                        android:textFontWeight="400"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/resendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:fontFamily="@font/dm_sans"
                        android:letterSpacing="0"
                        android:lineHeight="20dp"
                        android:text="Kodu yeniden gönder"
                        android:textColor="@color/odero_gray"
                        android:textFontWeight="400"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="114dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/OuterShell"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/green_bg_button"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:id="@+id/Container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="104dp"
                    android:minHeight="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ContinueText"
                        android:layout_width="74dp"
                        android:layout_height="24dp"
                        android:fontFamily="@font/dm_sans_semibold"
                        android:gravity="center"
                        android:letterSpacing="0"
                        android:lineHeight="24dp"
                        android:minWidth="74dp"
                        android:minHeight="24dp"
                        android:text="Devam et"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/RightIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/right_icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>