<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainFrameSUContact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpContactInformation">

    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="116dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/StatusBar"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/HeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="68dp"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            >

            <LinearLayout
                android:id="@+id/LeftContainer"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButtonSignUpIDInfo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/back_button"
                    android:clickable="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Spacing1"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Spacing1"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ProgressBar01"
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/progress_bar_bg">

            <FrameLayout
                android:id="@+id/ProgressBarFilled"
                android:layout_width="27.17dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_bar_filled">
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProgressBar02"
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:background="@drawable/progress_bar_bg">
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Spacing2"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBar">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/Body"
        android:layout_width="match_parent"
        android:layout_height="686dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spacing2">

        <LinearLayout
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="108dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleText1"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:fontFamily="@font/dm_sans_semibold"
                android:textFontWeight="600"
                android:textSize="12dp"
                android:lineHeight="18dp"
                android:letterSpacing="0.08"
                android:textAllCaps="true"
                android:textColor="@color/odero_gray"
                android:text="ÜYELİK BİLGİLERİ"/>

            <FrameLayout
                android:id="@+id/Spacing4"
                android:layout_width="match_parent"
                android:layout_height="4dp">

            </FrameLayout>

            <TextView
                android:id="@+id/TitleText2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/dm_sans_medium"
                android:letterSpacing="0"
                android:lineHeight="30dp"
                android:text="İletişim bilgilerini gir"
                android:textAllCaps="false"
                android:textColor="@color/odero_black_gray"
                android:textFontWeight="500"
                android:textSize="24dp" />

            <FrameLayout
                android:id="@+id/Spacing5"
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </FrameLayout>

            <TextView
                android:id="@+id/TitleText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:letterSpacing="0"
                android:lineHeight="24dp"
                android:text="Geçerli cep telefonu numaranı ve e-posta adresini bizimle paylaş."
                android:textColor="@color/odero_gray"
                android:textFontWeight="400"
                android:textSize="16dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Spacing3"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/Fields"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Selections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="136dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Selection01"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/container_bg"
                    android:gravity="center|left"
                    android:minHeight="60dp"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/InputDescriptor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans"
                        android:letterSpacing="0"
                        android:lineHeight="18dp"
                        android:minHeight="18dp"
                        android:text="Cep telefonu"
                        android:textColor="@color/odero_gray"
                        android:textFontWeight="400"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:id="@+id/ValueContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dm_sans_medium"
                            android:letterSpacing="0"
                            android:lineHeight="24dp"
                            android:minWidth="31dp"
                            android:minHeight="24dp"
                            android:text="+90"
                            android:textColor="@color/odero_gray_400_placeholder"
                            android:textFontWeight="500"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/PhoneNumberInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:background="@null"
                            android:fontFamily="@font/dm_sans"
                            android:inputType="number"
                            android:letterSpacing="0"
                            android:lineHeight="20dp"
                            android:maxLength="10"
                            android:minHeight="24dp"
                            android:textColor="@color/odero_gray"
                            android:textFontWeight="400"
                            android:textSize="14dp" />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/Spacing7"
                    android:layout_width="match_parent"
                    android:layout_height="16dp">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/Selection02"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/container_bg"
                    android:gravity="center|left"
                    android:minHeight="60dp"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <EditText
                        android:id="@+id/EmailInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:background="@null"
                        android:fontFamily="@font/dm_sans"
                        android:hint="E-posta adresi"
                        android:inputType="textEmailAddress"
                        android:letterSpacing="0"
                        android:lineHeight="20dp"
                        android:textColor="@color/odero_gray"
                        android:textFontWeight="400"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/Spacing6"
                android:layout_width="match_parent"
                android:layout_height="24dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/Checkboxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="196dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Frame213"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb01"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        android:src="@drawable/checkbox_empty" />

                    <TextView
                        android:id="@+id/cbText01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/dm_sans"
                        android:letterSpacing="0"
                        android:lineHeight="18dp"
                        android:minWidth="318dp"
                        android:minHeight="36dp"
                        android:text="Ödero’nun kimlik ve iletişim verilerimi ticari elektronik\nileti göndermek amacıyla işlemesini kabul ediyorum."
                        android:textColor="@color/odero_gray_700_medium_emphasis"
                        android:textFontWeight="400"
                        android:textSize="12dp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/CBSpace1"
                    android:layout_width="match_parent"
                    android:layout_height="16dp">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/Frame214"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb02"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        android:src="@drawable/checkbox_empty" />

                    <TextView
                        android:id="@+id/cbText02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/dm_sans"
                        android:letterSpacing="0"
                        android:lineHeight="18dp"
                        android:minWidth="318dp"
                        android:minHeight="54dp"
                        android:text="Ödero tarafından kişisel verilerimin pazarlama, reklam\nsüreçleri ve bana özel pazarlama faaliyetlerinin\nyürütülmesi amaçlarıyla işlenmesini kabul ediyorum."
                        android:textColor="@color/odero_gray_700_medium_emphasis"
                        android:textFontWeight="400"
                        android:textSize="12dp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/CBSpace2"
                    android:layout_width="match_parent"
                    android:layout_height="16dp">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/Frame215"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:minHeight="36dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb03"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        android:src="@drawable/checkbox_empty" />

                    <TextView
                        android:id="@+id/cbText03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/dm_sans"
                        android:letterSpacing="0"
                        android:lineHeight="18dp"
                        android:text="Ödero’nun Çerçeve Sözleşmesi’ni onaylıyorum."
                        android:textColor="@color/odero_gray_700_medium_emphasis"
                        android:textFontWeight="400"
                        android:textSize="12dp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/CBSpace3"
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/PersonalDataText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="350dp"
                    android:minHeight="36dp"
                    android:fontFamily="@font/dm_sans"
                    android:textFontWeight="400"
                    android:textSize="12dp"
                    android:lineHeight="18dp"
                    android:letterSpacing="0"
                    android:textColor="@color/odero_gray"
                    android:text="Kişisel verileriniz Aydınlatma Metni’nde belirtilen şekilde\nişlenecektir." />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="114dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/OuterShell"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/green_bg_button"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:id="@+id/Container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="104dp"
                    android:minHeight="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ContinueText"
                        android:layout_width="74dp"
                        android:layout_height="24dp"
                        android:fontFamily="@font/dm_sans_semibold"
                        android:gravity="center"
                        android:letterSpacing="0"
                        android:lineHeight="24dp"
                        android:minWidth="74dp"
                        android:minHeight="24dp"
                        android:text="Devam et"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/RightIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/right_icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>