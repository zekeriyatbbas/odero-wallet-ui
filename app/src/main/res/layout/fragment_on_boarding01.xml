<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OnBoarding01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:minWidth="390dp"
    android:minHeight="844dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".OnBoarding01">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Frame5833"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="192.89dp"
        android:minWidth="390dp"
        android:minHeight="378.23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Frame5834"
            android:layout_width="280dp"
            android:layout_height="214.23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/shopping_card_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopping_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Spacing"
            android:layout_width="350dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Frame5834">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Frame5832"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="388dp"
            android:minHeight="122dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Spacing"
            app:layout_constraintHorizontal_bias="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/TextBlock"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="350dp"
                    android:layout_height="44dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center"
                    android:letterSpacing="0"
                    android:lineHeight="44dp"
                    android:text="Hoş geldin"
                    android:textAlignment="center"
                    android:textColor="#101828"
                    android:textFontWeight="500"
                    android:textSize="35dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Spacing3"
                    android:layout_width="350dp"
                    android:layout_height="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Title"
                    tools:layout_editor_absoluteX="20dp">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="350dp"
                    android:layout_height="48dp"
                    android:fontFamily="@font/dm_sans"
                    android:letterSpacing="0"
                    android:lineHeight="24dp"
                    android:text="Ödero ile cebindeki cüzdanı dijitalleştirmenin tam zamanı!"
                    android:textAlignment="center"
                    android:textColor="#667085"
                    android:textFontWeight="400"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Spacing3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Spacing2"
                android:layout_width="350dp"
                android:layout_height="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TextBlock">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Slider"
                android:layout_width="390dp"
                android:layout_height="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Spacing2">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Frame5835"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:minHeight="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/container_bg"
            android:clickable="true"
            android:minWidth="97dp"
            android:minHeight="44dp"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="6dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/flag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/flag_turkey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/languageText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/dm_sans"
                android:gravity="center"
                android:text="TR"
                android:textColor="#101828"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/flag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/Dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/languageText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/odero_logo"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:foregroundGravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/signupButton"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/green_bg_button"
            android:fontFamily="@font/dm_sans_semibold"
            android:letterSpacing="0"
            android:lineHeight="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Üye Ol"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/lightgreen_bg_button"
            android:letterSpacing="0"
            android:lineHeight="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Hesabım var, giriş yap"
            android:textAllCaps="false"
            android:textColor="@color/odero_color_green"
            android:textFontWeight="600"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupButton"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/HomeIndicator"
            android:layout_width="390dp"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            app:layout_constraintVertical_bias="1.0">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/languageFrame"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_background"
        android:minWidth="390dp"
        android:minHeight="295dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/langFrameSpacing1"
            android:layout_width="match_parent"
            android:layout_height="12dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/langFrameSpacing2"
            android:layout_width="match_parent"
            android:layout_height="28dp">

        </FrameLayout>

        <TextView
            android:id="@+id/dil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_medium"
            android:letterSpacing="0"
            android:lineHeight="24dp"
            android:minHeight="24dp"
            android:text="Dil"
            android:textAlignment="center"
            android:textColor="@color/odero_black_gray"
            android:textFontWeight="500"
            android:textSize="20dp" />

        <FrameLayout
            android:id="@+id/langFrameSpacing3"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/turkishContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/langFrameSpacing4"
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/innerFrameTurkish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="350dp"
                android:minHeight="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/flagTurkey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="32dp"
                    android:minHeight="32dp"
                    android:src="@drawable/flag_turkey" />

                <TextView
                    android:id="@+id/turkishText"
                    android:layout_width="230dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center|left"
                    android:letterSpacing="0"
                    android:lineHeight="24dp"
                    android:text="Türkçe"
                    android:textColor="@color/odero_black_gray"
                    android:textFontWeight="500"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/turkishRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:buttonTint="@color/odero_color_green"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/englishContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/langFrameSpacing5"
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/innerFrameEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="350dp"
                android:minHeight="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/flagUK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="32dp"
                    android:minHeight="32dp"
                    android:src="@drawable/flag_uk" />

                <TextView
                    android:id="@+id/englishText"
                    android:layout_width="230dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center|left"
                    android:letterSpacing="0"
                    android:lineHeight="24dp"
                    android:text="English"
                    android:textColor="@color/odero_black_gray"
                    android:textFontWeight="500"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/englishRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:buttonTint="@color/odero_color_green"
                    android:checked="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>