<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PhoneCodeVerParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordPhoneCodeVerification" >

    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="116dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/StatusBar"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/HeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="68dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/LeftContainer"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButtonPhoneVer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:src="@drawable/back_button" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resetPasswordText"
                android:layout_width="206dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/TitleText"
                    android:layout_width="206dp"
                    android:layout_height="24dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center"
                    android:letterSpacing="0"
                    android:lineHeight="24dp"
                    android:text="Şifreni sıfırla"
                    android:textAlignment="center"
                    android:textColor="@color/odero_black_gray"
                    android:textFontWeight="500"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Body"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:minHeight="266dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header">

        <FrameLayout
            android:id="@+id/Spacing1"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="86dp"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

            <LinearLayout
                android:id="@+id/Frame205"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="350dp"
                android:minHeight="86dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infoText1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Cep telefonunu doğrula"
                    android:fontFamily="@font/dm_sans_medium"
                    android:textFontWeight="500"
                    android:textSize="24dp"
                    android:lineHeight="30dp"
                    android:letterSpacing="0"
                    android:textColor="@color/odero_black_gray"/>

                <FrameLayout
                    android:id="@+id/Spacing2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp">

                </FrameLayout>

                <TextView
                    android:id="@+id/infoText2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="+90 537 917 7562 numaralı cep telefonuna\n gelen 6 haneli kodu gir."
                    android:fontFamily="@font/dm_sans_medium"
                    android:textFontWeight="500"
                    android:textSize="16dp"
                    android:lineHeight="24dp"
                    android:letterSpacing="0"/>

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Spacing3"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/Selections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/OTPInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="350dp"
                android:minHeight="64dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/OTP01"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP02"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP03"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP04"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP05"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP06"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Spacing4"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/Container"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/infoText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sorun mu yaşıyorsun?"
                android:fontFamily="@font/dm_sans"
                android:textFontWeight="400"
                android:textSize="14dp"
                android:lineHeight="20dp"
                android:letterSpacing="0"
                android:textColor="@color/odero_gray"/>

            <FrameLayout
                android:id="@+id/Spacing5"
                android:layout_width="match_parent"
                android:layout_height="4dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/Frame218"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="258dp"
                android:minHeight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remainingTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans"
                    android:letterSpacing="0"
                    android:lineHeight="20dp"
                    android:text="180 saniye sonra "
                    android:textColor="@color/odero_gray"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/resendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Kodu yeniden gönder"
                    android:fontFamily="@font/dm_sans"
                    android:textFontWeight="400"
                    android:textSize="14dp"
                    android:lineHeight="20dp"
                    android:letterSpacing="0"
                    android:textColor="@color/odero_gray"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

