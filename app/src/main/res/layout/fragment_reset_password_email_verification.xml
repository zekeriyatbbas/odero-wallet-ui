<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EmailCodeVerParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordPhoneCodeVerification" >

    <LinearLayout
        android:id="@+id/HeaderEmailVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="116dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/StatusBar"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/HeaderContainerEmailVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="68dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="20dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/LeftContainerEmailVer"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButtonEmailVer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:src="@drawable/back_button" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resetPasswordTextEmailVer"
                android:layout_width="206dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/TitleTextEmailVer"
                    android:layout_width="206dp"
                    android:layout_height="24dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:gravity="center"
                    android:letterSpacing="0"
                    android:lineHeight="24dp"
                    android:text="Şifreni sıfırla"
                    android:textAlignment="center"
                    android:textColor="@color/odero_black_gray"
                    android:textFontWeight="500"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BodyEmailVer"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:minHeight="266dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeaderEmailVer">

        <FrameLayout
            android:id="@+id/Spacing1"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ContentEmailVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="110dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/Frame205EmailVer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="350dp"
                android:minHeight="86dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infoText1EmailVer"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:letterSpacing="0"
                    android:lineHeight="30dp"
                    android:text="E-posta adresini doğrula"
                    android:textColor="@color/odero_black_gray"
                    android:textFontWeight="500"
                    android:textSize="24dp" />

                <FrameLayout
                    android:id="@+id/Spacing2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp">

                </FrameLayout>

                <TextView
                    android:id="@+id/infoText2EmailVer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_medium"
                    android:letterSpacing="0"
                    android:lineHeight="24dp"
                    android:text="bariskayalar@gmail.com adresine gelen 6 haneli kodu gir. E-posta ulaşmadıysa Önemsiz (spam/junk) klasörünü kontrol etmeyi unutma."
                    android:textFontWeight="500"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Spacing3"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/SelectionsEmailVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/OTPInputEmailVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="350dp"
                android:minHeight="64dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/OTP01EmailVer"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP02EmailVer"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP03EmailVer"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP04EmailVer"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP05EmailVer"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/OTP06EmailVer"
                    android:layout_width="48.33dp"
                    android:layout_height="64dp"
                    android:background="@drawable/otp_input_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Spacing4"
            android:layout_width="match_parent"
            android:layout_height="24dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ContainerEmailVer"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/infoText3EmailVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sorun mu yaşıyorsun?"
                android:fontFamily="@font/dm_sans"
                android:textFontWeight="400"
                android:textSize="14dp"
                android:lineHeight="20dp"
                android:letterSpacing="0"
                android:textColor="@color/odero_gray"/>

            <FrameLayout
                android:id="@+id/Spacing5"
                android:layout_width="match_parent"
                android:layout_height="4dp">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/Frame218EmailVer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="258dp"
                android:minHeight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remainingTimeTextEmailVer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans"
                    android:letterSpacing="0"
                    android:lineHeight="20dp"
                    android:text="180 saniye sonra "
                    android:textColor="@color/odero_gray"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/resendCodeEmailVer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Kodu yeniden gönder"
                    android:fontFamily="@font/dm_sans"
                    android:textFontWeight="400"
                    android:textSize="14dp"
                    android:lineHeight="20dp"
                    android:letterSpacing="0"
                    android:textColor="@color/odero_gray"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

